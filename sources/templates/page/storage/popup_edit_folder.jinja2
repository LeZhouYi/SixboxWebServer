{% extends 'component/ui_popup_base.jinja2' %}
{% import 'component/ui_forms.jinja2' as forms %}

{% block popup_id %}popupEditFolder{% endblock %}

{% block popup_content %}
<form class="form-base" id="editFolderForm">
    {{ forms.form_title(_('EDIT FOLDER')) }}
    {{ forms.label_line_input('editFolderName',_('FOLDER NAME'), 'text', _('FOLDER NAME HOLDER'), 'required')}}
    {{ forms.label_select('editFolderSelect', _('FOLDER SELECT'), 'required') }}
    {{ forms.label_textarea('editFolderRemark', _('FOLDER REMARK'), '10em', _('FOLDER REMARK HOLDER')) }}
    <div class="form-buttons">
        {{ forms.button('editFolderConfirm', _('CONFIRM BUTTON'), 'submit') }}
        {{ forms.warn_button('editFolderCancel', _('CANCEL BUTTON')) }}
    </div>
</form>
{% endblock %}