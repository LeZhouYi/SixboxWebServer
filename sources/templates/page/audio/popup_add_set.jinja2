{% extends 'component/ui_popup_base.jinja2' %}
{% import 'component/ui_forms.jinja2' as forms %}

{% block popup_id %}popupAddSet{% endblock %}

{% block popup_content %}
<form class="form-base" id="addSetForm">
    {{ forms.form_title(_('ADD SET')) }}
    {{ forms.label_line_input('addSetName',_('SET NAME'), 'text', _('SET NAME HOLDER'), 'required')}}
    {{ forms.label_textarea('addSetRemark', _('SET REMARK'), '10em', _('SET REMARK HOLDER')) }}
    {{ forms.label_form_upload('addCoverLoader', _('SET COVER') , 'image/*', _('COVER UPLOAD HOLDER')) }}
    <div class="form-buttons">
        {{ forms.button('addSetConfirm', _('CONFIRM BUTTON'), 'submit') }}
        {{ forms.warn_button('addSetCancel', _('CANCEL BUTTON')) }}
    </div>
</form>
{% endblock %}