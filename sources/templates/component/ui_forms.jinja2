{# 左侧带图标的输入框 #}
{%- macro icon_input(id, type, icon, placeholder='', required=False) %}
    <div class="form-icon-input">
        <div class="form-icon">
            <img src="{{icon}}" alt="user">
        </div>
        <input type="{{type}}" id="{{id}}" placeholder="{{placeholder}}" {% if required %}required{% endif %}>
    </div>
{% endmacro -%}

{# 左侧带图标的，上侧有标签的输入框 #}
{%- macro label_input(id, name, type, icon, placeholder='', required=False) %}
    <div class="form-line-item">
        <label for="{{id}}">{{name}}</label>
        {{icon_input(id, type, icon, placeholder, required)}}
    </div>
{% endmacro -%}

{# 简单的深色按钮 #}
{%- macro button(id, name, type=None) %}
    <input class="form-button spinner-holder" {% if id is not none %}id="{{id}}"{% endif %} value="{{name}}" {% if type is not none %}type="{{type}}"{% endif %}>
{% endmacro -%}

{# 简单的警告色按钮 #}
{%- macro warn_button(id, name, type=None) %}
    <input class="form-warn_button spinner-holder" id="{{id}}" value="{{name}}" {% if type is not none %}type="{{type}}"{% endif %}>
{% endmacro -%}

{# 图标按钮 #}
{%- macro icon_button(id, icon)%}
    <div class="form-button-icon spinner-holder" id="{{id}}">
        <img src="{{icon}}" alt="button_icon">
    </div>
{% endmacro -%}

{# 搜索栏 #}
{%- macro search_bar(id, placeholder='') %}
    <div class="form-search-bar">
        {{ icon_input(id, 'text', '/static/icons/magnifier.png', placeholder) }}
    </div>
{% endmacro -%}

{# 表单标题 #}
{%- macro form_title(title) %}
    <div class="form-title">
        <a>{{title}}</a>
    </div>
{% endmacro -%}

{# 居中文本 #}
{%- macro form_center_text(text) %}
    <div class="form-center-text" >
        <a>{{text}}</a>
    </div>
{% endmacro -%}

{# 下拉选择 #}
{%- macro select(id, required=False)%}
    <select class="form-select" id="{{id}}" {% if required %}required{% endif %}></select>
{% endmacro -%}

{# 带标签的下拉选择 #}
{%- macro label_select(id, name) %}
    <div class="form-line-item">
        <label for="{{id}}">{{name}}</label>
        {{ select(id) }}
    </div>
{% endmacro -%}

{# 普通的单行输入框 #}
{%- macro input(id, type, placeholder='', required=False) %}
    <input class="form-input" id="{{id}}" type="{{type}}" placeholder="{{placeholder}}" {% if required %}required{% endif %}>
{% endmacro -%}

{# 上侧有标签的输入框 #}
{%- macro label_line_input(id, name, type, placeholder='', required=False) %}
    <div class="form-line-item">
        <label for="{{id}}">{{name}}</label>
        {{ input(id, type, placeholder, required) }}
    </div>
{% endmacro -%}

{# 普通多行文本输入框 #}
{%- macro textarea(id, min_line, placeholder='', required=False) %}
    <textarea id="{{id}}" class="form-textarea" rows="{{min_line}}" placeholder="{{placeholder}}" {% if required %}required{% endif %}></textarea>
{% endmacro -%}

{# 带标签的普通多行文本输入框 #}
{%- macro label_textarea(id, name, min_line, placeholder='', required=False) %}
    <div class="form-line-item">
        <label for="{{id}}">{{name}}</label>
        {{ textarea(id, min_line, placeholder, False) }}
    </div>
{% endmacro -%}

{# 带图标和文本的button #}
{%- macro icon_text_button(id, name, icon) %}
    <div class="form-text-button spinner-holder" id="{{id}}">
        <img src="{{icon}}" alt="button-icon">
        <div>{{name}}</div>
    </div>
{% endmacro -%}

{# 带label的拖动上传文件控件 #}
{%- macro label_form_upload(id,name,accept,holder) %}
    <div class="form-line-item">
        <label for="{{id}}">{{name}}</label>
        {{ form_upload(id, accept, holder) }}
    </div>
{% endmacro -%}

{# 拖动上传文件控件 #}
{%- macro form_upload(id,accept,holder) %}
    <div class="form-file-uploader" id="{{id}}">
        <div class="form-file-input">
            <input type="file" accept="{{accept}}">
            <div class="form-file-icon">
                <img src="/static/icons/upload.png">
            </div>
            <div class="form-file-holder">
                {{holder}}
            </div>
            <div class="form-file-holder">
                {{ _('UPLOAD DRAG HOLDER') }}
            </div>
        </div>
        <div class="form-file-display hidden">
            <div class="form-filename">
            </div>
            <div class="form-remove-icon">
                <img src="/static/icons/close.png">
            </div>
        </div>
    </div>
{% endmacro -%}