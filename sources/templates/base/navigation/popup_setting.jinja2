{% extends 'component/ui_popup_base.jinja2' %}
{% import 'component/ui_forms.jinja2' as forms %}

{% block popup_id %}popupSetting{% endblock %}
{% block overlay_class %}popup-overlay-float hidden{% endblock %}
{% block container_class %}popup-container-float{% endblock %}

{% block popup_content %}
<div class="navigation-popup">
    {{ forms.label_select('langSelect', _('LANG SELECT'), '', [
        {'name': _('LANG ZH-CN'), 'value': 'zh-CN'},
        {'name': _('LANG ENGLISH'), 'value': 'en'}
    ]) }}
</div>
{% endblock %}