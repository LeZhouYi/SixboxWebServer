{
    "logger": {
        "name": "sixbox",
        "level": "INFO",
        "format": "%(asctime)s-%(name)s-%(levelname)s-%(message)s",
        "folder": "data/log",
        "file_handler": {
            "filename": "data/log/log.log",
            "when": "D",
            "interval": 1,
            "backupCount": 7,
            "encoding": "utf-8",
            "delay": false,
            "utc": false
        }
    },
    "database": {
        "user": {
            "db_path": "data/db/user.json",
            "db_init": {},
            "defaults": [
                {
                    "username": "admin",
                    "password": "1234567a",
                    "role": 0
                }
            ]
        },
        "session": {
            "db_path": "data/db/session.json",
            "db_init": {},
            "jwt_secret_key": "vU7yZ4iH8pP7",
            "jwt_algorithm": "HS256",
            "jwt_exp_delta_seconds": 2592000
        },
        "storage": {
            "db_path": "data/db/storage.json",
            "db_init": {
            },
            "defaults": [
                {
                    "filepath": null,
                    "filename": "根目录",
                    "type": null,
                    "remark": "默认目录",
                    "folderID": null,
                    "uploader": null,
                    "size": null
                },
                {
                    "filepath": null,
                    "filename": "音频",
                    "type": null,
                    "remark": "存放音乐文件",
                    "folderID": null,
                    "uploader": null,
                    "size": null
                },
                {
                    "filepath": null,
                    "filename": "视频",
                    "type": null,
                    "remark": "存放视频文件",
                    "folderID": null,
                    "uploader": null,
                    "size": null
                }
            ],
            "extensions": [
                ".pdf",
                ".html",
                ".png",
                ".jpg",
                ".jpeg",
                ".zip",
                ".xlsx",
                ".pdf",
                ".docx",
                ".doc",
                ".md",
                ".json",
                ".msi",
                ".exe"
            ],
            "save_folder": "data/storage",
            "corrections": {
                ".htm": ".html",
                ".markdown": ".md"
            }
        },
        "cover": {
            "save_folder": "data/static/cover",
            "extensions": [
                ".png",
                ".jpg",
                ".jpeg"
            ]
        },
        "audio": {
            "db_path": "data/db/audio.json",
            "db_init": {},
            "defaults": [
                {
                    "filepath": null,
                    "filename": "音频",
                    "type": null,
                    "remark": "存放音频文件",
                    "folderID": null,
                    "uploader": null,
                    "size": null
                },
                {
                    "filepath": null,
                    "filename": "歌词",
                    "type": null,
                    "remark": "存放歌词文件",
                    "folderID": null,
                    "uploader": null,
                    "size": null
                },
                {
                    "filepath": null,
                    "filename": "封面",
                    "type": null,
                    "remark": "存放封面文件",
                    "folderID": null,
                    "uploader": null,
                    "size": null
                }
            ],
            "default_cover": "data/static/audio/default.png"
        },
        "audio_set": {
            "db_path": "data/db/audio_set.json",
            "db_init": {},
            "defaults": [
                {
                    "setName": "默认合集",
                    "remark": "默认合集",
                    "coverID": null,
                    "audios": [
                    ]
                }
            ]
        }
    },
    "flask": {
        "static_folder": "sources/static",
        "app_init": {
            "import_name": "sixbox",
                "template_folder": "sources/templates",
                "static_folder": "sources/static"
        },
        "app_run": {
            "debug": false,
            "host": "0.0.0.0",
            "port": 6839
        },
        "env": {
            "api_prefix": "/api/v1",
            "langs": [
                "zh_CN",
                "en"
            ],
            "domain": "messages",
            "locale_dir": "sources/locale",
            "chunk_size": 1024
        },
        "sources": {
            "cssmin": {
                "login_css": {
                    "output": "css/generate/login.css",
                    "sources": [
                        "css/component/*",
                        "css/page/login.css",
                        "css/default.css",
                        "css/theme.css"
                    ]
                },
                "storage_css": {
                    "output": "css/generate/storage.css",
                    "sources": [
                        "css/component/*",
                        "css/page/storage.css",
                        "css/default.css",
                        "css/theme.css"
                    ]
                },
                "music_css": {
                    "output": "css/generate/music.css",
                    "sources": [
                        "css/component/*",
                        "css/default.css",
                        "css/theme.css",
                        "css/page/audio.css"
                    ]
                },
                "pdf_editor_css": {
                    "output": "css/generate/pdf_editor.css",
                    "sources": [
                        "css/component/*",
                        "css/default.css",
                        "css/theme.css"
                    ]
                }
            },
            "jsmin": {
                "login_js": {
                    "output": "js/generate/login.js",
                    "sources": [
                        "js/spinner/spinner.js",
                        "js/sixbox/helpers/*",
                        "js/sixbox/init/*",
                        "js/sixbox/component/spinner.js",
                        "js/sixbox/component/popup_message.js",
                        "js/sixbox/dataview/*",
                        "js/sixbox/page/login/*"
                    ]
                },
                "storage_js": {
                    "output": "js/generate/storage.js",
                    "sources": [
                        "js/spinner/spinner.js",
                        "js/sixbox/helpers/*",
                        "js/sixbox/init/*",
                        "js/sixbox/component/*",
                        "js/sixbox/dataview/*",
                        "js/sixbox/page/storage/*"
                    ]
                },
                "audio_js": {
                    "output": "js/generate/audio.js",
                    "sources": [
                        "js/spinner/spinner.js",
                        "js/sixbox/helpers/*",
                        "js/sixbox/init/*",
                        "js/sixbox/component/*",
                        "js/sixbox/dataview/*",
                        "js/sixbox/page/audio/*"
                    ]
                },
                "pdf_editor_js": {
                    "output": "js/generate/pdf_editor.js",
                    "sources": [
                        "js/spinner/spinner.js",
                        "js/sixbox/helpers/*",
                        "js/sixbox/init/*",
                        "js/sixbox/component/*",
                        "js/sixbox/dataview/*",
                        "js/sixbox/page/tools/pdf_editor/*"
                    ]
                }
            }
        }
    }
}